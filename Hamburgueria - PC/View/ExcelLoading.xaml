<Window x:Class="Hamburgueria.View.ExcelLoading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hamburgueria.View"
        mc:Ignorable="d"
        Title="ExcelLoading" Background="#FF1B3BC6" Height="126" Width="532" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" ShowInTaskbar="False">
    <Grid>
        <Label Margin="10, 30" Content="Exportando para o Excel..." VerticalAlignment="Top" Height="40" FontFamily="Arial" Foreground="white" FontSize="17" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <ProgressBar x:Name="loadingBar" Background="White" BorderBrush="{x:Null}" Margin="10,81,0,0" HorizontalAlignment="Left" Width="512" Height="31" VerticalAlignment="Top"/>
    </Grid>
</Window>
